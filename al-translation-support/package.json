{
	"name": "al-translation-support",
	"displayName": "AL Translation Support",
	"description": "Supports developer to handle translation Dynamics Business Central projects.",
	"publisher": "KonnosPB",
	"version": "0.0.1",
	"files": [
		".\\src\\powershell"
	],
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:al-translation-support.helloWorld",
		"onCommand:al-extended-cop.checkCommand",
		"onLanguage:al"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "al-translation-support.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "al-extended-cop.checkCommand",
				"title": "Get Diagnostics"
			}
		],
		"configuration": {
			"title": "KVS",
			"properties": {
				"kvs.alcPath": {
					"type": ["string", null],
					"default": null,
					"description": "Specifies the al compiler file path to be used. Leave it empty to detect it automatically."					
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.56.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"ts-loader": "^9.2.2",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}